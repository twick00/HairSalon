@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @if (ViewBag.Stylists != null)
    {
    <div class="col-md-6">
        <h3>Stylists: </h3>
        <ul class="list-group">
        @foreach(var Stylist in ViewBag.Stylists)
        {
            <li class="list-group-item">
            <button class="btn btn-primary btn-xs push-right" type="button" data-toggle="collapse" data-target="#collapse-stylist-@Stylist.Id" aria-expanded="false" aria-controls="collapseExample">Show Stylists</button>
                <a href="/stylist/@Stylist.Id">@Stylist.Name</a>
                    <div class="collapse" id="collapse-stylist-@Stylist.Id">
                        <div class="well">
                        <ul class="list-group">
                            @foreach(var client in Stylist.GetClients())
                            {
                                <li class="list-group-item">@client.Name</li>
                            }
                        </ul>
                        </div>
                    </div>
                </li>
        }
        </ul>
    </div>
    } else {
        <div class="col">
        <h3>No Stylists to show</h3>
        </div>
    }
    <hr>
    @if (ViewBag.Clients != null)
    {
    <div class="col-md-6">
        <h3>Clients: </h3>
        <ul class="list-group">
            @foreach(var Client in ViewBag.Clients)
            {
                <li class="list-group-item">
                    <button class="btn btn-primary btn-xs push-right" type="button" data-toggle="collapse" data-target="#collapse-client-@Client.Id" aria-expanded="false" aria-controls="collapseExample">Show Stylists</button>
                <a href="/client/@Client.Id">@Client.Name<a href="/client/@Client.Id"></a>
                    <div class="collapse" id="collapse-client-@Client.Id">
                        <div class="well">
                        <ul class="list-group">
                           @foreach(var client in Client.GetStylist())
                           {
                               <li class="list-group-item">@client.Name</li>
                           }
                        </ul>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    } else {
        <div class="col">
        <h3>No Clients to show</h3>
        </div>
    }
</div>
<div class="container">

</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
